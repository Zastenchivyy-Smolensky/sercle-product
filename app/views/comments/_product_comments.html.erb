 <% if product.comments.present? %>
      <p>コメント件数:<%= product.comments.count %></p>
        <% product.comments.each do |comment| %>
        <div class="comments-index mb-2">
            <%= link_to comment.user.username, user_path(comment.user.id) %>
            <%= comment.created_at.strftime('%Y/%m/%d') %> <br>
            <div class="d-flex">
              <p><%= comment.comment%></p>
              <% if comment.user == current_user %>
                <div class="comment-delete">
                  <%= button_to "削除する", product_comment_path(comment.product, comment), method: :delete, remote: true, data: {cofirm: "本当に削除しますか?"}  %>
                </div>
            </div> 
        </div>
        <% end %>
    <% end %>
    <% else %>
    <p>コメントはまだありません</p>
  <% end %>