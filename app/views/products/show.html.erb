<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        レシピ詳細
      </h1>
    </div>
  </div>
</section>
<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-7">
        <div class="card">
          <div class="card-image">
            <figure class="image is-4by3">
                <%= attachment_image_tag @product, :image %>
            </figure>
          </div> 
          <div class="card-content">
            <div class="media">
              <div class="media-content">
                  <p class="title is-4"><%= @product.title %></p>
                </div>
              </div>
              <div class="content">
                <table class="table is-narrow">
                  <tr>
                    <th>アプリの説明</th>
                  </tr>
                  <tr>
                    <td><%= simple_format @product.content %></td>
                  </tr>
                </table>
                  <% if current_user.already_favorited?(@product) %>
                    <%= button_to product_favorites_path(@product.id), method: :delete do %>
                      <span><i class="fas fa-heart"></i></span>
                  <% end %>
                <% else %>
                    <%= button_to product_favorites_path(@product.id), method: :create do %>
                      <span><i class="far fa-heart"></i></span>
                    <% end %>
                <% end %>
                <%= @product.favorites.count%>
                <% if @product.user.id == current_user.id %>
                  <%= link_to '編集画面', edit_product_path(@product), class:"button is-success" %>
                <% end %>
            </div>
          </div>
        </div>
      </div>

    <div class="column is-4">
        <article class="panel is-link">
          <p class="panel-heading">
            By <%= @product.user.username %>
          </p>
          <div class="panel-block">
            <p class="control">
              <%= @product.user.profile %>
            </p>
          </div>
          <%= link_to user_path(@product.user), class: "panel-block" do %>
            <span class="panel-icon">
              <i class="fas fa-user" aria-hidden="true"></i>
            </span>
            <%= @product.user.username %> さんのページへ
          <% end %>
        </article>
      </div>
    </div>
  </div>
</section>
<div class="comments ml-5 mt-5">
<%= form_for([@product, @comment], local:true) do |f| %>
  <%= f.text_area :comment, :size=>"60x3",placeholder: "コメントする" %>
  <%= f.submit "送信する", class: "btn btn-success mb-4" %>
<% end %>
<p>コメント件数:<%= @comments.count %></p>

  <% @comments.each do |comment| %>
  <div class="comments-index mb-2">
      <%= link_to comment.user.username, user_path(comment.user.id) %>
      <%= comment.created_at.strftime('%Y/%m/%d') %> <br>
      <div class="d-flex">
        <p><span>コメント内容</span><%= comment.comment%></p>
        <% if comment.user == current_user %>
          <div class="comment-delete">
            <%= link_to "削除する", comment_path(comment.id), method: :delete  %>
          </div>
      </div> 
  </div>
  <% end %>
  <% end %>
</div>
