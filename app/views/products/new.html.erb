<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        新規プロダクト作成
      </h1>
    </div>
  </div>
</section>

<% if @product.errors.any? %>
  <div class="notification is-danger">
    <h2><%= pluralize(@product.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
    <ul>
      <% @product.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<section class="section">
    <div class="container">
        <div class="columns is-centered">
            <div class="column is-6">
                <%= form_for @product do |f| %>
                    <%= f.label :title,"アプリのタイトル", class:"label"%>
                    <%= f.text_field :title, class:"input" %>

                    <%= f.label :content,"アプリの説明", class:"label" %>
                    <%= f.text_area :content, class:"textarea" %>

                    <%= f.label :tech,"技術", class:"label" %>
                    <%= f.text_area :tech, class:"textarea" %>

                    <%= f.label :span,"制作期間", class:"label" %>
                    <%= f.text_area :span, class:"number" %>

                    <%= f.label :image,"アプリの写真", class:"label" %>
                    <%= f.attachment_field :image, class:"input" %>

                    <%= f.submit "投稿", class:"button is-success" %>
                <% end %>
            </div>
        </div>
    </div>
</section>

