<% @users.each do |user| %>
<hr>
    <p><span>email:</span><%= link_to user.email, user_path(user.id) %></p>
    <% if current_user != user %>
      <% if user.followed_by?(current_user) %>
        <p><%= button_to "フォロー済み", user_relationships_path(user.id), method: :delete %></p>
    <% else %>
        <p><%= button_to 'フォローする', user_relationships_path(user.id), method: :post %></p>
      <% end %>
    <% end %>
<% end %>