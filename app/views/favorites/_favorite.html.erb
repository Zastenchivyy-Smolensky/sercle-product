<% if user_signed_in? %>
    <% if product.favorited_by?(current_user) %>
            <%= link_to product_favorites_path(product),class:"fas fa-heart" , method: :delete, remote: true do %>
            <span><%= product.favorites.count%></span>
        <% end %>
        <% else %>
            <%= link_to product_favorites_path(product),class: "far fa-heart", method: :post, remote: true do %>
                <span><%= product.favorites.count%></span>
        <% end %>
<% end %>
<% else %>
<p><span>いいね数</span><%= product.favorites.count%></p>
<% end %>